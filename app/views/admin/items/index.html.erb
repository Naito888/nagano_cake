<div class="container my-5">
  <div class="row">
    <h3 class="bg-light mt-4 ml-5 mb-5 text-center">商品一覧</h3>
  </div>
  <div class="row text-right">
    <%= link_to "+", new_admin_item_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow-sm" %>
  </div>

  <div class="row mt-1">
    <table class="table table-hover text-center">
      <thead>
        <tr class="table-secondary text-algin-left">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
        <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
            <% end %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.is_active %></td>
      </tbody>
      <% end %>
    </table>
  </div>

<ul class="pagination">
<%= paginate @items %>
</ul>

</div>
